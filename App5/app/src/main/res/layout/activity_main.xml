<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/quadrado"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/quadrado"
        android:layout_centerHorizontal="true"
        />
    <ImageView
        android:id="@+id/mulher"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/mulher"
        android:layout_centerHorizontal="true"
        />
    <ImageView
        android:id="@+id/nome"
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:src="@drawable/retanguloazul"
        android:layout_below="@+id/quadrado"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        />
    <ImageView
        android:id="@+id/matricula"
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:layout_below="@id/nome"
        android:src="@drawable/retanguloazul"
        android:layout_centerHorizontal="true"
        />
    <ImageView
        android:id="@+id/curso"
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:layout_below="@id/matricula"
        android:src="@drawable/retanguloazul"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/textViewNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HeloÃ­sa Mendes da Silva"
        android:layout_below="@id/quadrado"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:textColor="#090808"
        android:textSize="16dp"
        />
    <TextView
        android:id="@+id/textViewMatricula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2022.1.0120.0009-9"
        android:layout_below="@id/nome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textColor="#090808"
        android:textSize="16dp"
        />
    <TextView
        android:id="@+id/textViewCurso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADS"
        android:layout_below="@id/matricula"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textColor="#090808"
        android:textSize="16dp"
        />

    <ImageView
        android:id="@+id/botao"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/botao"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
    />
  </RelativeLayout>